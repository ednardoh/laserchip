  end;

var
  frmDatamodulo: TfrmDatamodulo;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

function TfrmDatamodulo.CharEspeciais(Texto: String): String;
var
  i,t:integer;
begin
  t:=length(texto);
  i:=1;
  While i <= t do
  begin
   if texto[i] in ['0'..'9','a'..'z','A'..'Z',#32] Then
     result:=result+Texto[i];
   i:=i+1;
  end;
end;

end.
